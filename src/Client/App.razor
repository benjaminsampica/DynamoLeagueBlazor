<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <RouteView RouteData="routeData" DefaultLayout="@typeof(AuthenticatedLayout)" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(AuthenticatedLayout)">
                <MudAlert Severity=Severity.Info>
                    This page does not exist. If you believe this is in error, please contact the site owners.
                </MudAlert>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
