<EditForm Model=_form OnValidSubmit=OnValidSubmitAsync>
        <FluentValidationValidator />
        <MudDialog>
            <DialogContent>
                   Are you sure you want to delete this user?
            </DialogContent>
            <DialogActions>
                <LoadingButton @bind-IsLoading=_processingForm Icon=@Icons.Material.Outlined.Delete Color=Color.Error>
                    <ButtonContent>
                        <MudText>Delete</MudText>
                    </ButtonContent>
                </LoadingButton>
            </DialogActions>
        </MudDialog>
    </EditForm> 


