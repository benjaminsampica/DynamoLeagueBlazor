<EditForm Model=_form OnValidSubmit=OnValidSubmitAsync>
    <FluentValidationValidator />
    <MudDialog>
        <DialogContent>
            Do you want to approve this fine?
        </DialogContent>
        <DialogActions>
            <MudGrid Spacing=1>
                <MudItem xs=12>
                    <LoadingButton @bind-IsLoading="_processingForm" Icon=@Icons.Outlined.Delete OnClick=@(() => IsApproved(false)) Color=Color.Error>
                        <ButtonContent>
                            <MudText>Delete</MudText>
                        </ButtonContent>
                    </LoadingButton>
                </MudItem>
                <MudItem xs=12>
                    <LoadingButton @bind-IsLoading="_processingForm" Icon=@Icons.Outlined.Check OnClick=@(() => IsApproved(true))>
                        <ButtonContent>
                            <MudText>Approve</MudText>
                        </ButtonContent>
                    </LoadingButton>
                </MudItem>
            </MudGrid>
        </DialogActions>
    </MudDialog>
</EditForm>
