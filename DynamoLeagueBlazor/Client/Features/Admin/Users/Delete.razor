<EditForm Model=_form OnValidSubmit=OnValidSubmitAsync>
        <FluentValidationValidator />
        <MudDialog>
            <DialogContent>
                   Are you sure you want to delete this user?
            </DialogContent>
            <DialogActions>
                <MudButton Color="Color.Error" Variant=Variant.Text StartIcon=@Icons.Outlined.Delete 
                    ButtonType=ButtonType.Submit Disabled="@_processingForm" FullWidth=true 
                    Size=Size.Large>
                    @if (_processingForm)
                    {
                        <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
                        <MudText Class="ms-2">Saving...</MudText>
                    }
                    else
                    {
                        <MudText>Delete</MudText>
                    }
                </MudButton>
            </DialogActions>
        </MudDialog>
    </EditForm> 


